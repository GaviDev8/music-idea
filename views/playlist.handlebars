{{!< layouts/main}}
{{#with playlist}}

<h1>Playlist: {{title}} {{id}}</h1>
<div class="container">
   {{#each tracks}}
      <div class="item">
         {{> track playlistId=../id}}
      </div>
      {{#if isEndOfRow }}
         </div>
         {{#if isNotLast}}
         <div class="container">
         {{/if}}
      {{/if}}
   {{/each}}
</div>
{{/with}}
<script src="/js/playlist.js"></script>

